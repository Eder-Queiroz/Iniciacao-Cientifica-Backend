// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Curso {
  id          String       @id @default(uuid())
  nome        String
  turno       String
  agrupamento Int
  disciplina  Disciplina[]
  turma       Turma[]

  @@map("curso")
}

model Disciplina {
  id           String    @id @default(uuid())
  nome         String
  periodo      Int
  qtaulas      Int
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String
  curso        Curso     @relation(fields: [curso_id], references: [id])
  curso_id     String

  @@map("disciplina")
}

model Professor {
  id         String       @id @default(uuid())
  nome       String
  email      String
  restricao  Restricao[]
  disciplina Disciplina[]

  @@map("professor")
}

model Restricao {
  id           String    @id @default(uuid())
  professor    Professor @relation(fields: [professor_id], references: [id])
  professor_id String
  dia          Int
  periodo      String

  @@map("restricao")
}

model Turma {
  id       String @id @default(uuid())
  periodo  Int
  qtalunos Int
  curso    Curso  @relation(fields: [curso_id], references: [id])
  curso_id String

  @@map("turma")
}

model Sala {
  id         String @id @default(uuid())
  nome       String
  capacidade Int
  qtdpcs     Int

  @@map("sala")
}
